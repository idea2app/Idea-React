{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "lib": ["ES2023", "DOM"]
    },
    "include": ["source/**/*", "stories/**/*", "*.ts", ".storybook/**/*"],
    "typedocOptions": {
        "name": "Idea React",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
