{
    "compilerOptions": {
        "target": "ES5",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "lib": ["ES2021", "DOM"]
    },
    "include": ["source/**/*"],
    "typedocOptions": {
        "name": "Idea React",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
