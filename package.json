{
    "name": "idea-react",
    "version": "0.22.1",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "A React advanced components library based on TypeScript & Bootstrap, built by idea2app remote developers team.",
    "keywords": [
        "react",
        "component",
        "typescript",
        "bootstrap"
    ],
    "homepage": "https://ideapp.dev/Idea-React/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/Idea-React.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/Idea-React/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.js",
    "dependencies": {
        "@editorjs/editorjs": "^2.23.2",
        "@editorjs/paragraph": "^2.8.0",
        "classnames": "^2.3.1",
        "editorjs-html": "^3.4.2",
        "lodash": "^4.17.21",
        "prismjs": "^1.27.0",
        "react": "^17.0.2",
        "react-bootstrap": "^2.2.3",
        "react-dom": "^17.0.2",
        "react-editor-js": "^2.0.6",
        "react-element-to-jsx-string": "^14.3.4",
        "web-utility": "^3.6.1"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.181",
        "@types/prismjs": "^1.26.0",
        "@types/react-dom": "^17.0.15",
        "husky": "^7.0.4",
        "less": "^4.1.2",
        "lint-staged": "^12.3.7",
        "microbundle": "^0.14.2",
        "open-cli": "^7.0.1",
        "prettier": "^2.6.2",
        "typedoc": "^0.22.14",
        "typedoc-plugin-mdn-links": "^1.0.6",
        "typescript": "~4.3.5"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,less,json,yml,ts,tsx}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "make": "microbundle --name IdeaReact --css-modules true --jsx React.createElement --external classnames,lodash,web-utility,react,react-dom,react-bootstrap,@editorjs/editorjs,react-editor-js,editorjs-html",
        "build": "rm -rf dist/ docs/  &&  typedoc source/  &&  npm run make",
        "start": "typedoc source/  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build",
        "preview": "cd preview  &&  npm start"
    }
}
