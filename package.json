        "@swc/helpers": "^0.4.14",
        "@types/leaflet": "^1.9.3",
        "classnames": "^2.3.2",
        "editorjs-html": "^3.4.2",
        "koajax": "^0.8.4",
        "leaflet": "^1.9.3",
        "lodash": "^4.17.21",
        "mobx": "^5.15.7",
        "mobx-react": "^6.3.1",
        "prismjs": "^1.29.0",
        "react": "^17.0.2",
        "react-bootstrap": "^2.7.4",
        "react-dom": "^17.0.2",
        "react-editor-js": "^2.1.0",
        "react-element-to-jsx-string": "^15.0.0",
        "react-leaflet": "^3.2.5",
        "web-utility": "^4.0.0"
    },
    "devDependencies": {
        "@parcel/packager-ts": "~2.6.2",
        "@parcel/transformer-less": "~2.6.2",
