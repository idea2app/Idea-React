{
    "name": "idea-react",
    "version": "0.9.6",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "A React advanced components library based on TypeScript & Bootstrap, built by idea2app remote developers team.",
    "keywords": [
        "react",
        "component",
        "typescript",
        "bootstrap"
    ],
    "homepage": "https://ideapp.dev/Idea-React/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/Idea-React.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/Idea-React/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.js",
    "dependencies": {
        "classnames": "^2.3.1",
        "lodash": "^4.17.21",
        "react": "17.0.2",
        "react-bootstrap": "^2.0.4",
        "react-dom": "17.0.2",
        "web-utility": "^2.9.6"
    },
    "peerDependencies": {
        "@editorjs/editorjs": "^2.22.2",
        "editorjs-html": "^3.4.2",
        "react-editor-js": "^2.0.3"
    },
    "devDependencies": {
        "@editorjs/editorjs": "^2.22.2",
        "@types/lodash": "^4.14.178",
        "husky": "^7.0.4",
        "less": "^4.1.2",
        "lint-staged": "^12.1.4",
        "microbundle": "^0.14.2",
        "open-cli": "^7.0.1",
        "prettier": "^2.5.1",
        "typedoc": "^0.22.10",
        "typedoc-plugin-mdn-links": "^1.0.4",
        "typescript": "~4.5.4"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,less,json,yml,ts,tsx}": "prettier --write"
    },
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "make": "microbundle --name IdeaReact --css-modules true --jsx React.createElement --external classnames,lodash,web-utility,react,react-dom,react-bootstrap,@editorjs/editorjs,react-editor-js,editorjs-html",
        "build": "rm -rf dist/ docs/  &&  typedoc source/  &&  npm run make",
        "start": "typedoc source/  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
